<h1>Burgers!</h1>

<div class="burger-lists">
  <div class="devourable">
    <h2>Eat the burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="devoured">
    <h2>Devoured Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger/burger-block}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="newBurg">Burger Name:</label>
    <input type="text" id="newBurg" name="name">

    <button type="submit">Add Burger</button>
  </div>
</form>